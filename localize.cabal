category:            Text
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules:     Data.Gmo,
                       Text.Localize 
  build-depends:       base > 4 && < 5,
                       binary ==0.7.*,
                       bytestring ==0.10.*,
                       text ==0.11.*,
                       bytestring-trie ==0.2.*,
                       containers ==0.5.*,
                       text-format ==0.3.0.9,
                       time ==1.4.*,
                       transformers ==0.3.*
